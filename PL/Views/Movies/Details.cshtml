@model MovieViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Movie Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2 col-xs-12">
            @Html.DisplayNameFor(x => x.Title)
        </dt>
        <dd class="col-sm-10 col-xs-12">
            @Html.DisplayFor(x => x.Title)
        </dd>
        <dt class="col-sm-2 col-xs-12">
            @Html.DisplayNameFor(x => x.ReleaseDate)
        </dt>
        <dd class="col-sm-10 col-xs-12">
            @Html.DisplayFor(x => x.ReleaseDate)
        </dd>
        <dt class="col-sm-2 col-xs-12">
            @Html.DisplayNameFor(x => x.Genre)
        </dt>
        <dd class="col-sm-10 col-xs-12">
            @Html.DisplayFor(x => x.Genre)
        </dd>
        <dt class="col-sm-2 col-xs-12">
            @Html.DisplayNameFor(x => x.Price)
        </dt>
        <dd class="col-sm-10 col-xs-12">
            @Html.DisplayFor(x => x.Price)
        </dd>
        <dt class="col-sm-2 col-xs-12">
            @Html.DisplayNameFor(x => x.Rating)
        </dt>
        <dd class="col-sm-10 col-xs-12">
            @Html.DisplayFor(x => x.Rating) / 10
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index">Back to list</a>
</div>